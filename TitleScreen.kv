TitleScreenWidget:

<TitleScreenWidget>:
    Image:
        source: "Graphics\GUI\Sci-Fi UI Game Asset Pack\white assets\panels\panel-2.png"
        allow_stretch: True
        keep_ratio: False
        size_hint: None, None
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size: "300dp","580dp"

    BoxLayout:
        spacing: "10dp"
        padding: "0dp", "0dp", "0dp", "30dp"
        orientation: "vertical"
        size_hint: None, None
        size: "300dp", "580dp"  # Match the Image size
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Center the layout
        Label:
            text: "RRR"
            size_hint: 0.3, 0.1
            font_name: "Fonts\GlitchGoblin.ttf"
            font_size: "80dp"
            pos_hint: {'center_x': .5}
            color: 1, .2, .1, 1
        Button:
            text:"Start"
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': .5}
            background_color: 0, 0, 0, 0
        Button:
            text: "Controls"
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': .5}
            background_color: 0, 0, 0, 0
        Button:
            text: "Settings"
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': .5}
            background_color: 0, 0, 0, 0

